{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": true,
    "outDir": "./build",
    "rootDir": ".",
    "baseUrl": ".",
    "paths": {
      "api/*": ["src/api/*"],
      "configs/*": ["src/configs/*"],
      "data/*": ["src/data/*"],
      "db/*": ["src/db/*"],
      "domains/*": ["src/domains/*"],
      "infrastructures/*": ["src/infrastructures/*"],
      "repositories/*": ["src/repositories/*"],
      "services/*": ["src/services/*"],
      "schema/*": ["src/db/schema/*"],
      "types/*": ["src/types/*"],
      "utils/*": ["src/utils/*"],
      "workers/*": ["src/workers/*"]
    },
    "strictNullChecks": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "noUnusedLocals": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "moduleResolution": "bundler",
    "composite": false,
    "resolveJsonModule": true,
    "types": ["bun-types", "vitest/globals"]
  },
  "include": [
    "src/**/*.ts",
    "tests/**/*.ts",
    "tests/**/*.json",
    "vitest.config.ts",
    "vitest.setup.ts",
    "scripts/**/*.ts",
    "drizzle.config.ts"
  ],
  "exclude": ["node_modules", "build"]
}

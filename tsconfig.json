{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": true,
    "outDir": "./build",
    "rootDir": ".",
    "baseUrl": ".",
    "paths": {
      "api/*": ["src/api/*"],
      "config/*": ["src/config/*"],
      "data/*": ["src/data/*"],
      "db/*": ["src/db/*"],
      "domain/*": ["src/domain/*"],
      "infrastructure/*": ["src/infrastructure/*"],
      "repository/*": ["src/repository/*"],
      "service/*": ["src/service/*"],
      "schema/*": ["src/db/schema/*"],
      "types/*": ["src/types/*"],
      "utils/*": ["src/utils/*"],
      "job/*": ["src/job/*"],
      "tests/*": ["tests/*"]
    },
    "strictNullChecks": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "noUnusedLocals": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "moduleResolution": "bundler",
    "composite": false,
    "resolveJsonModule": true,
    "types": ["bun-types"]
  },
  "include": [
    "src/**/*.ts",
    "tests/**/*.ts",
    "tests/**/*.json",
    "scripts/**/*.ts",
    "drizzle.config.ts"
  ],
  "exclude": ["node_modules", "build"]
}
